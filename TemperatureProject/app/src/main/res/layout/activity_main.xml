<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title_string_text_view"
        android:layout_width="415dp"
        android:layout_height="64dp"
        android:ems="10"
        android:text="@string/title_string_text_view"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#673AB7"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.169" />

    <EditText
        android:id="@+id/input_temperature_edit_text"
        android:layout_width="317dp"
        android:layout_height="82dp"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/input_temperature_edit_text"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/title_string_text_view"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/title_string_text_view"
        app:layout_constraintTop_toBottomOf="@+id/title_string_text_view" />

    <Button
        android:id="@+id/convert_button"
        android:layout_width="317dp"
        android:layout_height="82dp"
        android:layout_marginTop="68dp"
        android:text="@string/convert_button"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/temperature_converted_text_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/temperature_converted_text_view"
        app:layout_constraintTop_toBottomOf="@+id/temperature_converted_text_view" />

    <TextView
        android:id="@+id/temperature_converted_text_view"
        android:layout_width="317dp"
        android:layout_height="82dp"
        android:layout_marginTop="136dp"
        android:text="@string/temperature_converted_text_view"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/input_temperature_edit_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_temperature_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/input_temperature_edit_text" />

</androidx.constraintlayout.widget.ConstraintLayout>